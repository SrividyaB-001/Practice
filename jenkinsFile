pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo "Build Stage"
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploy Stage"
                sh '''
                    for var in 0 1 2 
                    do 
                    mkdir test$var
                    echo "test$var"
                    '''
            }
        }
    }
}